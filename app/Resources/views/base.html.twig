{% extends '_lte_base.html.twig' %}

{% block stylesheets %}

    {% stylesheets  '@BackendBundle/Resources/public/css/bootstrap.css'
        '@BackendBundle/Resources/public/css/morris/morris.css'
        '@BackendBundle/Resources/public/css/jvectormap/jquery-jvectormap-1.2.2.css'
        '@BackendBundle/Resources/public/css/daterangepicker/daterangepicker-bs3.css'
        '@BackendBundle/Resources/public/css/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css'
        '@BackendBundle/Resources/public/fancybox/jquery.fancybox.css'
        '@BackendBundle/Resources/public/css/AdminLTE.css'
        '@BackendBundle/Resources/public/css/estiloa.css'
        '@FrontendBundle/Resources/public/css/vendor/ng-table.min.css'
        '@FrontendBundle/Resources/public/css/vendor/ng-toasty.css'
        '@FrontendBundle/Resources/public/css/vendor/dialogs.min.css'
            output='css/lte_backend.css' filter='cssrewrite' %}
        <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
    {% endstylesheets %}
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->

{% endblock %}
{% block gorputza %}

    {% block header %}
        {% include '_lte_header.html.twig' %}
    {% endblock %}

    <div class="wrapper row-offcanvas row-offcanvas-left">

        {% block ezkerrekomenua %}{% endblock %}

        <!-- Right side column. Contains the navbar and content of the page -->
        <aside class="right-side">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    {% block headertitulo %}{% endblock %}
                </h1>
            </section>

            <!-- Main content -->
            <section class="content">

                <div class="row">
                    <div class="col-xs-12">

                        {% include '_lte_ag_alerts.html.twig' %}

                        {% block body %}
                        {%  endblock %}
                        <!-- /.box -->
                    </div>
                </div>

            </section>
            <!-- /.content -->
        </aside>
        <!-- /.right-side -->
    </div><!-- ./wrapper -->

    {% block footer %}
        {% include '_lte_footer.html.twig' %}
    {% endblock %}

{% endblock %}

{% block javascripts %}
    {% javascripts  '@BackendBundle/Resources/public/js/jquery-2.0.2.min.js'
        '@BackendBundle/Resources/public/js/jquery-ui-1.10.3.min.js'
        '@BackendBundle/Resources/public/js/bootstrap.3.0.3.min.js'
        '@BackendBundle/Resources/public/js/raphael.2.1.0.min.js'
        '@BackendBundle/Resources/public/js/plugins/morris/morris.min.js'
        '@BackendBundle/Resources/public/js/plugins/sparkline/jquery.sparkline.min.js'
        '@BackendBundle/Resources/public/js/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js'
        '@BackendBundle/Resources/public/js/plugins/jvectormap/jquery-jvectormap-world-mill-en.js'
        '@BackendBundle/Resources/public/js/plugins/jqueryKnob/jquery.knob.js'
        '@BackendBundle/Resources/public/js/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js'
        '@BackendBundle/Resources/public/js/plugins/iCheck/icheck.min.js'
        '@BackendBundle/Resources/public/js/plugins/daterangepicker/daterangepicker.js'
        '@BackendBundle/Resources/public/js/AdminLTE/app.js'

        '@FrontendBundle/Resources/public/js/vendor/angular.min.js'
        '@FrontendBundle/Resources/public/js/vendor/angular-route.min.js'
        '@FrontendBundle/Resources/public/js/vendor/angular-resource.min.js'
        '@FrontendBundle/Resources/public/js/vendor/angular-sanitize.min.js'
        '@FrontendBundle/Resources/public/js/vendor/angular-translate.min.js'
        '@FrontendBundle/Resources/public/js/vendor/angular-animate.min.js'
        '@FrontendBundle/Resources/public/js/vendor/ui-bootstrap-tpls-0.11.2.min.js'
        '@FrontendBundle/Resources/public/js/vendor/dialogs-default-translations.min.js'
        '@FrontendBundle/Resources/public/js/vendor/dialogs.min.js'
        '@FrontendBundle/Resources/public/js/vendor/ng-table.min.js'
        '@FrontendBundle/Resources/public/js/vendor/ng-toasty.min.js'
        '@FrontendBundle/Resources/public/js/app.js'
        '@FrontendBundle/Resources/public/js/controller/frontend.js'
        '@FrontendBundle/Resources/public/js/controller/tabla.js'
        '@FrontendBundle/Resources/public/js/controller/serigrafia.js'
        '@FrontendBundle/Resources/public/js/controller/pickandplace.js'
        '@FrontendBundle/Resources/public/js/controller/horno.js'
        '@FrontendBundle/Resources/public/js/controller/menu.js'

        '@FrontendBundle/Resources/public/js/script.js'
            output='js/lte_backend.js' filter='?yui_js' %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
    <script type="text/javascript" src="{{ asset('bundles/backend/fancybox/jquery.browser.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/backend/fancybox/jquery.fancybox.pack.js') }}"></script>

    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
{% endblock %}