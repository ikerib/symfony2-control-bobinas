{% extends '::basefrontend.html.twig' %}

{% block title %}Inicio{% endblock %}

{% block ezkerrekomenua %}{% include '_lte_menu_user.html.twig' with {'option': 'dashboard'} %}{% endblock %}

{% block headertitulo %}Validación AOI{% endblock %}

{% block body -%}

  <div class="row">

    <div class="col-lg-6 col-xs-6">
      <!-- small box -->
      <div class="small-box bg-aqua">
        <div class="inner">
          <h3>
            OF:{{ log.of }}
          </h3>
          <p>

          </p>
        </div>
      </div>
    </div>

    <div class="col-lg-6 col-xs-6">
      <!-- small box -->
      <div class="small-box bg-green">
        <div class="inner">
          <h3>
            Operación: {{ log.operacion }}
          </h3>
        </div>
      </div>
    </div>

  </div>

  <div class="row">
    <div class="col-xs-12">

      <div class="box">
          <div class="box-header">
              <h3 class="box-title">Validación AOI</h3>
          </div>
          <div class="box-body table-responsive" class="dataTables_wrapper form-inline" role="grid">

            <div id="divAlert" class=""></div>
            <div id="divAlertInfo" class=""></div>

            <table id="checklist">
              <thead>
                <th>Comprobar</th>
                <th>Respuesta</th>
              </thead>
              <tbody>
                <tr>
                    <td>Introduce Nombre Programa:</td>
                    <td><input id="programa" type="text" name="programa" value="{{ log.programa }}" /><span id="resul"></span><a id="cmdgrabar" href="#"><i class="fa fa-floppy-o"></i></a></td>
                </tr>
                <tr>
                    <td>¿Muestra patrón correcta?</td>
                    <td>
                        {% if log.aoipatron == 1 %}
                            <button class="btnCheck btnAoi btn btn-sm btn-success btn-delete"><i class="fa fa-check"></i></button>
                        {% else %}
                            <button class="btnCheck btnAoi btn btn-sm btn-danger btn-delete"><i class="fa fa-exclamation-circle"></i></button>
                        {% endif %}
                    </td>
                </tr>
                </tbody>
            </table>
          </div>
        </div> {# box #}
    </div> {# col-xs-12 #}
  </div> {# row #}




  <input type="hidden" id="leidos" value="" />
  <input type="hidden" id="logid" value="{{ log.id }}" />
  <input type="hidden" id="miope" value="{{ log.operacion }}" />
{% endblock %}

{% block javascripts %}

  {{ parent() }}

  <script type="text/javascript">

    $(function() {

        $('.btnAoi').on('click', function(){
            var that = $(this);
            var milogid = $('#logid').val();
            var url = Routing.generate('api_1_post_aoipatron');
            $.ajax({
                url: url,
                type: 'POST',
                dataType: 'json',
                data: {logid:milogid}
            })
            .done(function(data) {
                location.reload();
            })
            .fail(function() {
                console.log("error");
            })
            .always(function() {
                console.log("complete");
            });

        });

        $('#cmdgrabar').on('click', function() {
            var milogid = $('#logid').val();
            var programa = $('#programa').val();
            var url = Routing.generate('api_1_post_logprograma');
            $.ajax({
                url: url,
                type: 'POST',
                dataType: 'json',
                data: {logid:milogid, programa:programa}
            })
            .done(function(data) {
                $('#resul').append('<i class="fa fa-check-circle"></i>');
            })
            .fail(function() {
                console.log("error");
            })
            .always(function() {
                console.log("complete");
            });
        });

        var zenbat =  $('.btn-success').length;

        if ( ($('#programa').val()) && (parseInt(zenbat)>0) ) {
            var ope = $('#miope').val();
            var url = Routing.generate('dovalidacion5',{operacion: ope});
//            var miTexto ="<div class='alert alert-success alert-dismissable'>" +
//                    "<h4> <i class='icon fa fa-check'></i>¡COMPLETADO!</h4>" +
//                    "<p>Revisa la lista y si todo está correcto haz click en el botón para continuar.</p>" +
//                    "<p><a href="+ url +" class='btn btn-block btn-primary'>ACEPTAR</a></p>" +
//                    "</div>";
//            $('#divAlertInfo').append(miTexto);

            var miTexto = "<div class='modal fade' id='myModal2' tabindex='-1' role='dialog' aria-labelledby='myModalLabel' aria-hidden='true'>" +
                    "<div class='modal-dialog'>" +
                    "<div class='modal-content'>" +
                    "<div class='modal-header'>" +
                    "<button type='button' class='close' data-dismiss='modal' aria-label='Close'><span aria-hidden='true'>&times;</span></button>" +
                    "<h4 class='modal-title' id='myModalLabel'>COMPLETADO!</h4>" +
                    "</div>" +
                    "<div class='modal-body'>" +
                    "Proceso completado correctamente. ¿Quieres terminar el proceso y pasar a la siguiente fase?" +
                    "</div>" +
                    "<div class='modal-footer'>" +
                    "<a href='#' data-dismiss='modal' class='btn'>CERRAR</a>" +
                    "<a href="+ url +" class='btn btn-primary'>ACEPTAR</a>" +
                    "</div>" +
                    "</div>" +
                    "</div>" +
                    "</div>";
            $('#divAlertInfo').append(miTexto);
            $('#myModal2').modal('show');

        }

        $('#checklist').DataTable( {
            language: {
                "sProcessing":     "Procesando...",
                "sLengthMenu":     "Mostrar _MENU_ registros",
                "sZeroRecords":    "No se encontraron resultados",
                "sEmptyTable":     "Ningún dato disponible en esta tabla",
                "sInfo":           "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                "sInfoEmpty":      "Mostrando registros del 0 al 0 de un total de 0 registros",
                "sInfoFiltered":   "(filtrado de un total de _MAX_ registros)",
                "sInfoPostFix":    "",
                "sSearch":         "Buscar:",
                "sUrl":            "",
                "sInfoThousands":  ",",
                "sLoadingRecords": "Cargando...",
                "oPaginate": {
                    "sFirst":    "Primero",
                    "sLast":     "Último",
                    "sNext":     "Siguiente",
                    "sPrevious": "Anterior"
                },
                "oAria": {
                    "sSortAscending":  ": Activar para ordenar la columna de manera ascendente",
                    "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                }
            },
            bFilter: false,
            paging: false,
            "fnDrawCallback": function( oSettings ) {
                // var leidos = oSettings.fnRecordsTotal() );
                $('#leidos').val(oSettings.fnRecordsTotal());
            }
        });

    });


  </script>

{% endblock javascripts %}