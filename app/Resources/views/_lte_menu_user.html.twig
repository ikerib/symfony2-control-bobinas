{% extends '_lte_ag_menu.html.twig' %}

    {% block user_avatar %}
        <div class="user-panel">
            <div class="pull-left image">
                <img src="{{ vich_uploader_asset(usuario, 'avatar') | imagine_filter('my_thumb') }}" class="img-circle" alt="Imagen del usuario">
            </div>
            <div class="pull-left info">
                <p>Namasté, {{usuario.nombre}}</p>

                <a href="{{ path('logout') }}"><i class="fa fa-circle text-success "></i> Desconectar</a>

            </div>
        </div>
    {% endblock %}

{% block menu %}

    {% set menu=0 %}
        {% if app.request.attributes.get('_route') == 'my_route' %}
            {% set menu=1 %}
        {% endif %}
        {% if app.request.attributes.get('_route') == "validacion2" %}
            {% if log is defined %}
                {%  if log.validacion2 == 1 %}
                    {% set menu=2 %}
                {% endif %}
            {% endif %}
        {% endif %}
        {% if app.request.attributes.get('_route') == "validacion3" %}
            {% if log is defined %}
                {%  if log.validacion3 == 1 %}
                    {% set menu=3 %}
                {% endif %}
            {% endif %}
        {% endif %}
        {% if app.request.attributes.get('_route') == "validacion4" %}
            {% if log is defined %}
                {%  if log.validacion4 == 1 %}
                    {% set menu=4 %}
                {% endif %}
            {% endif %}
        {% endif %}
        {% if app.request.attributes.get('_route') == "validacion5" %}
            {% if log is defined %}
                {%  if log.validacion5 == 1 %}
                    {% set menu=5 %}
                {% endif %}
            {% endif %}
        {% endif %}
        {% if app.request.attributes.get('_route') == "validacion6" %}
            {% if log is defined %}
                {%  if log.validacion6 == 1 %}
                    {% set menu=6 %}
                {% endif %}
            {% endif %}
        {% endif %}

        <li>
            <a href="{{ path('dashboard') }}">
                <i class="fa fa-dashboard"></i> <span>Inicio</span>
            </a>
        </li>

    {% if menu > 0 %}
        <li>
            <a href="{{ path('validacion2', { operacion: log.operacion }) }}">
                <i class="fa fa-gavel"></i> <span>1-. Material</span>
            </a>
        </li>
    {% endif %}

    {% if menu > 1 %}
        <li>
            <a href="{{ path('validacion3', { operacion: log.operacion }) }}">
                <i class="fa fa-gavel"></i> <span>2-. Validación serigrafía</span>
            </a>
        </li>
    {% endif %}

    {% if menu > 2 %}
        <li>
            <a href="{{ path('validacion4', { operacion: log.operacion }) }}">
                <i class="fa fa-gavel"></i> <span>3-. Validación Pick&Place</span>
            </a>
        </li>
    {% endif %}

    {% if menu > 3 %}
        <li>
            <a href="{{ path('validacion5', { operacion: log.operacion }) }}">
                <i class="fa fa-gavel"></i> <span>4-. Validación Horno</span>
            </a>
        </li>
    {% endif %}

    {% if menu > 4 %}
        <li>
            <a href="{{ path('validacion5', { operacion: log.operacion }) }}">
                <i class="fa fa-gavel"></i> <span>5-. Validación AOI</span>
            </a>
        </li>
    {% endif %}

    {% if menu > 5 %}
        <li>
            <a href="{{ path('validacion5', { operacion: log.operacion }) }}">
                <i class="fa fa-gavel"></i> <span>6-. Completado</span>
            </a>
        </li>
    {% endif %}


{% endblock %}
