{% extends '::base.html.twig' %}

{% block title %}Mantenimiento de Usuarios{% endblock %}

{% block ezkerrekomenua %}{% include '_lte_menu.html.twig' with {'option': 'admin_usuarios'} %}{% endblock %}

{% block headertitulo %}Mantenimiento de Usuarios{% endblock %}

{% block body -%}
    <div class="row">
        <div class="col-md-12">
            <form action="{{ path('admin_usuarios_create') }}" method="post" {{ form_enctype(form) }}>
                <div class="box box-info">
                    <div class="box-header">
                        <h3 class="box-title"></h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">

                        <div class="form-group">
                            {{ form_label(form.nombre,'Nombre: ' | trans) }}
                            {{ form_errors(form.nombre) }}
                            {{ form_widget(form.nombre,{ 'attr': {'class': 'form-control' }}) }}
                        </div>


                        <div class="form-group">
                            {{ form_label(form.apellidos,'Apellidos: ' | trans) }}
                            {{ form_errors(form.apellidos) }}
                            {{ form_widget(form.apellidos,{ 'attr': {'class': 'form-control' }}) }}
                        </div>


                        <div class="form-group">
                            {{ form_label(form.encargado,'Encargado: ' | trans) }}
                            {{ form_errors(form.encargado) }}
                            {{ form_widget(form.encargado,{ 'attr': {'class': 'form-control' }}) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.admin,'Admin: ' | trans) }}
                            {{ form_errors(form.admin) }}
                            {{ form_widget(form.admin,{ 'attr': {'class': 'form-control' }}) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.avatarImg,'Avatar: ' | trans) }}
                            {{ form_errors(form.avatarImg) }}
                            {{ form_widget(form.avatarImg,{ 'attr': {'class': 'form-control' }}) }}
                        </div>

                        <div style="display: none;">
                            {{ form_rest(form) }}
                        </div>


                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Crear</button>
                        </div>

                    </div>
                    <!-- /.box -->
                </div>


            </form>
        </div>
    </div>

{% endblock %}
