                    <tr>
                        <th>-</th>
                        <th>Texto</th>
                        <th>Orden</th>
                        <th>Menusid</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td class="tdacciones2">
