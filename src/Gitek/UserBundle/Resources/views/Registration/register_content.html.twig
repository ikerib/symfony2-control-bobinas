{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="box box-info">
        <div class="box-header">
            <h3 class="box-title"></h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">

            <div class="form-group">
                {{ form_label(form.username,'Usuario: ' | trans) }}
                {{ form_errors(form.username) }}
                {{ form_widget(form.username,{ 'attr': {'class': 'form-control' }}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.email,'Email: ' | trans) }}
                {{ form_errors(form.email) }}
                {{ form_widget(form.email,{ 'attr': {'class': 'form-control' }}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.plainPassword,'Password: ' | trans) }}
                {{ form_errors(form.plainPassword) }}
                {{ form_widget(form.plainPassword,{ 'attr': {'class': 'form-control' }}) }}
            </div>

            <div class="form-group">
                {#{{ form_label(form.plainPassword.first,'Password: ' | trans) }}#}
                {#{{ form_errors(form.plainPassword.first) }}#}
                {#{{ form_widget(form.plainPassword.first,{ 'attr': {'class': 'form-control' }}) }}#}
                {{ form_row(form.plainPassword.first) }}
            </div>

            <div class="form-group">
                {#{{ form_label(form.plainPassword.second,'Password: ' | trans) }}#}
                {#{{ form_errors(form.plainPassword.second) }}#}
                {#{{ form_widget(form.plainPassword.second,{ 'attr': {'class': 'form-control' }}) }}#}
                {{ form_row(form.plainPassword.second) }}
            </div>

            <div style="display: none" class="form-group">
                {{ form_rest(form) }}
            </div>


            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Grabar</button>
            </div>

        </div>
        <!-- /.box -->
    </div>

    {{ form_end(form) }}

</form>
