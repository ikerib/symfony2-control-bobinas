{% extends '::base.html.twig' %}

{% block title %}Mantenimiento de Validación de Serigrafia{% endblock %}

{% block ezkerrekomenua %}{% include '_lte_menu.html.twig' with {'option': 'ValidacionSerigrafia'} %}{% endblock %}

{% block headertitulo %}Mantenimiento de Validación de Serigrafia{% endblock %}

{% block body -%}

<div class="box">
    <div class="box-header">

    </div>
    <!-- /.box-header -->

    <div class="box-body table-responsive">
        <a class="btn btn-primary" href="{{ path('admin_validacion_serigrafia_new') }}">Nuevo Pregunta</a>
        <br/>
        <br/>
        <table id="tablainstrucciones"
               class="table table-condensed table-hover table-bordered table-striped">
            <thead>
            <tr>
                <th>&nbsp;</th>
                <th>Pregunta</th>
                <th>Mostrar</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td class="tdacciones2">
                        <ul class="list-unstyled ullinea ulacciones">
                            <li class="enlinea">
                                <a href="{{ path('admin_validacion_serigrafia_edit', { 'id': entity.id }) }}"><img
                                            src="{{ asset('bundles/backend/img/editar18.png') }}"
                                            alt="Editar">&nbsp;{{ "Editar" | trans }}</a>
                            </li>
                            <li class="enlinea"><a
                                        href="{{ path('admin_validacion_serigrafia_delete', { 'id': entity.id }) }}"
                                        onclick="return confirm('¿Seguro que desea eliminar?');"><img
                                            src="{{ asset('bundles/backend/img/eliminar18.png') }}"
                                            alt="Eliminar">&nbsp;{{ "Eliminar" |trans }}</a>
                            </li>
                        </ul>
                    </td>
                    <td>{{ entity.pregunta }}</td>
                    <td>{{ entity.mostrar }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <!-- /.box-body -->
</div>

{% endblock %}
